<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/style_show.css">
    <link rel="stylesheet" href="/styles/style_alert.css">
    <title>To Do List</title>
</head>
<body>
    <div id="container" class="container">

        <div class="navbar">

            <!-- back button -->
            <div class="d1">
                <form method="get" action="https://to-do-app-dga6.onrender.com/tasks">
                    <button>
                        <img src="/assets/back_icon.png" alt="">
                    </button>
                </form>
            </div>
    
            <div class="d2">
                <!-- edit task -->
                <div class="edit">
                    <form method="get" action="https://to-do-app-dga6.onrender.com/tasks/edit/<%= Task._id %>">
                        <div class="nav">
                            <button>
                                <img src="/assets/edit_icon.png" alt="">
                            </button>
                        </div>
                    </form>
                </div>

                <!-- delete task -->
                <div class="delete">
                    <form id="delete_from" method="post" action="https://to-do-app-dga6.onrender.com/tasks/<%= Task._id %>?_method=DELETE">             
                        <button type="button" id="delete_btn"><img src="/assets/delete_icon.png" alt=""></button>
                    </form>
                </div>
            </div>
        </div>

        <div class="box">
            <div class="title"><%= Task.title %></div>
            <div class="time"><%= Task.startTime %> - <%= Task.endTime %></div>
            <div class="status">Status : 
                <div  class="clr <% if (Task.status === 'Completed') { %> completed 
                <% } else if (Task.status === 'In Progress') { %> in_progress 
                <% } else { %> pending <% } %>"> <%= Task.status %>
                </div>
            </div>
            <div class="description">Description : <%= Task.description %></div>
        </div>

    </div>

    <div id="alertContainer">
        <div id="customAlert">
            <div class="icon"><img src="/assets/alert_icon.png" alt=""></div>
            <div class="confirm">Are you sure you want to delete this task?</div>
            <div id="btns">
                <button id="confirmBtnYes">Delete</button>
                <button id="confirmBtnNo">Cancel</button>
            </div>
        </div>
    </div>
    
    <script src="/scripts/delete.js"></script>
</body>
</html>



